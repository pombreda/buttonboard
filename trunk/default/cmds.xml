<?xml version="1.0" encoding="iso-8859-1"?>

<!--  
This is the default file to define commands, scripts and icons,
and customizing the layout

The first list of commmands contains the following elements for each command:

	name:	A unique command name

	label:	The label for the command shown below the icon

	exec:	The script or program to run on the server. Can point to an absolute path 		
			on the system (i.e. "/bin/ls").  This can have a "param" sub-tag for each
			parameter

	icon:	The icon to display. A good site to check out for making nice iPhone-y icons is:
				http://www.quirco.com/iPhoneIcon/

	confirm: True if a confirmation dialog is needed
	
	output:	True to display command output in a dialog box

-->

<bbdata>


<cmds>
	<cmd name="tv_power">
		<label>TV Power</label>
		<exec>scripts/tv_power.sh</exec>
		<icon>/images/tv.png</icon>
		<badge>/images/power-red.png</badge>
	</cmd>
	<cmd name="stereo_power">
		<label>Stereo Power</label>
		<exec>scripts/stereo_power.sh</exec>
		<icon>/images/stereo.png</icon>
		<badge>/images/power-red.png</badge>
	</cmd>
	<cmd name="stereo_vol_up">
		<label>Vol +</label>
		<exec>scripts/stereo_vol_up.sh</exec>
		<icon>/images/up-red.png</icon>
	</cmd>
	<cmd name="stereo_vol_down">
		<label>Vol -</label>
		<exec>scripts/stereo_vol_down.sh</exec>
		<icon>/images/down-red.png</icon>
	</cmd>
	<cmd name="restart_itunes">
		<label>(Re)Start iTunes</label>
		<exec>scripts/restart_app.sh
			<param>iTunes</param>
		 </exec>	
		<icon>/images/itunes.png</icon>
		<badge>/images/restart-silver.png</badge>
		<confirm>true</confirm>
	</cmd>
	<cmd name="random_album_itunes">
		<label>Random Album</label>
		<exec>scripts/itunes_random_album.as</exec>
		<icon>/images/itunes.png</icon>
		<badge>/images/shuffle-red.png</badge>
	</cmd>
	<cmd name="play_pause_itunes">
		<label>Play/Pause</label>
		<exec>scripts/itunes_play_pause.as</exec>
		<icon>/images/itunes.png</icon>
		<badge>/images/pause-red.png</badge>
	</cmd>
	<cmd name="restart_plex">
		<label>(Re)Start Plex</label>
		<exec>scripts/restart_app.sh
			<param>Plex</param>
		</exec>
		<icon>/images/plex.png</icon>
		<badge>/images/restart-silver.png</badge>
		<confirm>true</confirm>
	</cmd>
	<cmd name="fullscreen_plex">
		<label>Plex FS Toggle</label>
		<exec>scripts/plex_fullscreen.sh</exec>
		<icon>/images/plex.png</icon>
		<badge>/images/square-red.png</badge>
	</cmd>
	<cmd name="show_hide_plex">
		<label>Show/Hide Plex</label>
		<exec>scripts/show_hide_app.sh
			<param>Plex</param>
		</exec>
		<icon>/images/plex.png</icon>
		<badge>/images/updown-red.png</badge>
	</cmd>
	<cmd name="rescan_plex">
		<label>Rescan Plex Media</label>
		<exec>scripts/rescan_plex.sh</exec>
		<icon>/images/pms.png</icon>
		<badge>/images/refresh-red.png</badge>
		<confirm>true</confirm>
	</cmd>
	<cmd name="play_pause_plex">
		<label>Play/Pause</label>
		<exec>scripts/plex_play_pause.sh</exec>
		<icon>/images/plex.png</icon>
		<badge>/images/pause-red.png</badge>
	</cmd>

	<cmd name="restart_trans">
		<label>(Re)Start Transmission</label>
		<exec>scripts/restart_app.sh
			<param>Transmission</param>
		</exec>
		<icon>/images/transmission.png</icon>
		<badge>/images/restart-silver.png</badge>
		<confirm>true</confirm>
	</cmd>

	<cmd name="update_comix">
		<label>Update Comics</label>
		<exec>scripts/update_comics_dropbox.sh</exec>
		<icon>/images/comics.png</icon>
		<badge>/images/dropbox.png</badge>
		<output>true</output>
	</cmd>
		
 </cmds>

 
<!-- 
Since the buttons are layed out in lines of 4, they are grouped here that way for
the sake of clarity.  Please note the use of the special reserved command, "blank", used
as a space filler on the grid.
-->	

<layout>
<buttonrow>
<item n="tv_power" />		<item n="stereo_power" />			<item n="blank" />				<item n="stereo_vol_up" />
</buttonrow>
<buttonrow>
<item n="restart_itunes" />	<item n="random_album_itunes" />	<item n="play_pause_itunes" />	<item n="stereo_vol_down" />
</buttonrow>
<buttonrow>
<item n="restart_plex" />	<item n="fullscreen_plex" />		<item n="show_hide_plex" />		<item n="play_pause_plex" />
</buttonrow>
<buttonrow>
<item n="restart_trans" />	<item n="update_comix" />			<item n="rescan_plex" />		<item n="blank" />
</buttonrow>
</layout>

</bbdata>


